<h1><%= @building_review.title %> </h1>

<img src="<%=@building_review.building.image%>" alt="<%=@building_review.building.address%>">

<h2> Building: <%= building_reviewed(@building_review) %> </h2>
<h2> Reviewed By: <%=reviewed_by_content(@building_review) %> </h2>
<h2> Overall Rating: <%= @overall_rating.round(2) %> </h2>
<h2> Cleanliness: <%= @building_review.cleanliness %> </h2>
<h2> Super: <%= @building_review.super %> </h2>
<h2> Noise: <%= @building_review.noise %> </h2>
<% if @building_review.renew == false %>
    <h2> Would you Renew? No </h2>
<%else%>
    <h2> Would you Renew? Yes </h2>
<%end%>

<p> <%= @building_review.content %> </p>
<%if @building_review.tenant == current_tenant %>
    <p> <%= link_to "Update Review", edit_building_review_path(@building_review) %> </p>
    <%= button_to "Delete Review", { action: "delete", id: @building_review.id }, method: :delete %>
<%end%>