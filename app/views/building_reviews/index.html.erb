<h1 style=font-size:50px>Building Reviews:</h1>
<p><%= link_to "Review a Building", new_building_review_path %></p>
<%@building_reviews.each do |review|%>
        <p>Review: <%= link_to review.title, building_review_path(review)%></p>
        <% if review.building %>
        <img class="building_thumbnail"src="<%=review.building.image%>" alt="<%=review.building.address%>">
        <%end%>
        <% rating = (review.cleanliness.to_f + review.noise.to_f + review.super.to_f) / 3 %>
        <p>Overall Rating: <%= rating.round(2) %></p>
        <p>Building: <%= building_reviewed(review) %></p>
        <p>Reviewed By:  <%= reviewed_by_content(review) %></p>
        <hr>
<% end %>
