<h1>Make a New Profile: </h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |message| %>
    <h5><%= message %></h5>
    <% end %>
<% end %>
<%= form_for @tenant do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %><br />
  <br>

  <%= f.label :username %>:
  <%= f.text_field :username %><br />
  <br>

  <%= f.submit %>
<% end %>

<h5> <%= link_to "View all Buildings", buildings_path %>